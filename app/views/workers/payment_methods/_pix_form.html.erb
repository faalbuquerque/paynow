<% use_id_if_edit =  action_name == 'edit' ? "/#{payment_method.id}" : ''  %>
<%= form_with model: payment_method, url: "#{workers_payment_methods_path}#{use_id_if_edit}" do |f| %>
  <p>
    <%= f.label :code_bank  %>
    <%= f.text_field :code_bank %>
  </p>

  <p>
    <%= f.label :code_pix  %>
    <%= f.text_field :code_pix %>
  </p>

  <p <%= action_name == 'edit' ? 'style=display:none;' : '' %> >
    <%= collection_select( payment_method.class, :id, @payment_methods, :id, :name) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

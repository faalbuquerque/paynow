 <div class="container"> 
  <h4><%= t('.products') %></h4>
  <br>
  <p>
    <%= link_to  t('.add_product'), new_product_path, class:"btn btn-outline-primary" %>
  </p>

  <div class="acesses_show">
    <% @products.each do |product| %>
      <p>
        <%= link_to product.product_name, product_path(product), class:"btn btn-outline-dark" %>
      </p>

      <p style="text-align:center">
        <%= link_to t('.edit_product'), edit_product_path(product), class:"btn btn-outline-dark" %>
      </p>
      <hr>
    <% end %>
  </div>
</div>